server {
    server_name <%= @hostname %>;
    listen 443 ssl;
    listen [::]:443 ssl;

    server_tokens off;

    ssl_certificate /etc/nginx/certs/<%= @hostname %>.crt;
    ssl_certificate_key /etc/nginx/certs/<%= @hostname %>.key;

    location / {
      if ( $http_origin = '' ){
        add_header 'Access-Control-Allow-Origin' 'https://web.<%= @hostname %>' always;
        add_header 'Access-Control-Allow-Headers' 'Access-Control-Allow-Headers, Origin,Accept, X-Requested-With, Content-Type, Access-Control-Request-Method, Access-Control-Request-Headers, Authorization';
        add_header 'Access-Control-Allow-Methods' 'GET,HEAD,OPTIONS,POST,PUT';
        add_header 'Access-Control-Allow-Credentials' 'true';
      }
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_pass http://<%= @internalhostname %>:<%= @port %>/;
        proxy_set_header X-Forwarded-Proto https;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_redirect off;

        allow   <%= @my_ip %>;
        deny    all;
    }
    location /ws/ {
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_pass http://<%= @internalhostname %>:<%= @port %>/ws/;

        allow   <%= @my_ip %>;
        deny    all;
    }
}

server {
    server_name web.<%= @hostname %>;
    listen 80;
    return 301 https://$host$request_uri;

